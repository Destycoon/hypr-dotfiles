{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "~/.config/fastfetch/logo.txt",
        "padding": {
	        "top": 1
	    },
        "color": {
            "1": "#00BFFF"
        }
    },
    "display": {
        "separator": "  "
    },
    "modules": [
	"break",
    "break",
    	{
		"type":"title",
	    "outputColor":"#00BFFF", 
	},
        {
            "type": "os",
            "key": "os    ",
            "keyColor": "#00BFFF",
        },
        {
            "type": "kernel",
            "key": "kernel",
            "keyColor": "#00BFFF",
        },
        {
            "type": "host",
            "format": "{5} {1}",
            "key": "host  ",
            "keyColor": "#00BFFF",
        },
        {
            "type": "packages",
            "format": "{} (pacman)",
            "key": "pkgs  ",
            "keyColor": "#00BFFF",  
        },
        {
            "type": "cpu",
            "format": "   {2}",
            "key": "cpu",
            "keyColor": "#00BFFF",
        },
        {
            "type": "memory",
            "key": "memory",
            "keyColor": "#00BFFF",
        },
        "break",
        "break",
    ]
}
