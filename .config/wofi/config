# Mode d'affichage par défaut (drun = apps via desktop files, run = commandes)
show=drun

# Icône + Prompt (personnalisable à volonté)
prompt= Launch:

# Terminal utilisé pour lancer des applis CLI
term=kitty

# Ignore la casse lors des recherches
insensitive=true

# Autorise l’affichage des icônes (nécessite un thème d’icônes compatible)
allow_images=true

# Supprime la scrollbar (plus propre)
hide_scroll=true

# Empêche les actions secondaires (genre clic droit)
no_actions=true

# Position de la fenêtre sur l’écran
location=1

# Largeur de la fenêtre (en pixels)
width=500

# Hauteur maximale (utile si tu as beaucoup d’entrées)
height=300

# Pour désactiver les suggestions de complétion
allow_markup=false

# Ajoute du flou si tu utilises un compositeur (sous Wayland + wofi stylé)
blur=true   <-- seulement si tu fais du CSS avec blur supporté
